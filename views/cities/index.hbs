<h1>All Cities</h1>
{{#if cities.length}}
{{#if user}}
<a class="btn btn-info text-white m-2" href="/cities/create">Add Your City</a>
{{/if}}
{{else}}
<a class=" btn btn-info lead text-white m-2" href="/auth/login">Want to add your City ?Log In to
  add</a>
{{/if}}

{{#if cities.length}}
<div class="conatiner bg-translucent p-3 m-2">
    <div class="row">
        {{#each cities}}
        <div class="col-3 mb-3">

            <p class="text-dark  lead cat">
                <i class="fa-solid fa-location-dot text-dark"></i> {{this.name}}
            </p>

        </div>
        {{/each}}
    </div>
</div>
{{else}}
<p>No destinations found.</p>
{{/if}}