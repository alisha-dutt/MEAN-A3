<h1>Edit Destination</h1>
<div class="bg-translucent p-2 w-25">
<form method="post">
    <fieldset>
        <label for="placeName">Name: *</label>
        <input type="text" name="placeName" id="placeName" value="{{destinations.placeName}}" required />
    </fieldset>
     <fieldset>
        <label for="placeCity">City: *</label>
        <select name="placeCity" id="placeCity" required>
            {{#each cities}}
                {{selectOption this.name ../destinations.placeCity}}
            {{/each}}
            {{!-- <option value="{{destinations.placeCity}}">{{destinations.placeCity}}</option> --}}
        </select>
    </fieldset>
    <fieldset>
        <label for="comments">Comments:</label>
        <textarea name="comments" id="comments">{{destinations.comments}}</textarea>
    </fieldset>
    <button class="btn btn-secondary offset-1">Save</button>
</form>
</div>

